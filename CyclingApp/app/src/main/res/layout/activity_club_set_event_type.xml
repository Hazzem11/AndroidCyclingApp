<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewSelectEventType"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="Select Event Type"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonSelectEventType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Select as Event Type"
            android:textSize="24sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewUserPrompt"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:gravity="center"
        android:text="Select Type of Event for your Event"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/listViewEventTypes"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
